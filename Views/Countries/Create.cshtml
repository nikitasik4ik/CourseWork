@model CourseWork.Models.Country

@{
    ViewData["Title"] = "Create";
}

<h1>Создание</h1>

<h4>Страна</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameCountry" class="control-label">Название страны</label>
                <input asp-for="NameCountry" class="form-control" />
                <span asp-validation-for="NameCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Перейти к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}