@model CourseWork.Models.Client

@{
    ViewData["Title"] = "Создать";
}

<h1>Создать</h1>

<h4>Клиент</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstNameClient" class="control-label"></label>
                <input asp-for="FirstNameClient" class="form-control" />
                <span asp-validation-for="FirstNameClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastNameClient" class="control-label"></label>
                <input asp-for="LastNameClient" class="form-control" />
                <span asp-validation-for="LastNameClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatronomykClient" class="control-label"></label>
                <input asp-for="PatronomykClient" class="form-control" />
                <span asp-validation-for="PatronomykClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateBirth" class="control-label"></label>
                <input asp-for="DateBirth" class="form-control" />
                <span asp-validation-for="DateBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneClient" class="control-label"></label>
                <input asp-for="PhoneClient" class="form-control" />
                <span asp-validation-for="PhoneClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
