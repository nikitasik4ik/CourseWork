@model IEnumerable<CourseWork.Models.Provider>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameProvider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneProvider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailProvider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameProvider)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneProvider)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailProvider)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.NameCountry)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProviderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProviderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProviderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
